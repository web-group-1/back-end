// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:../databases/dev.db"
}

model User {
  id             Int      @id @default(autoincrement())
  firstName      String
  lastName       String
  emailAddress   String   @unique()
  hash           String
  courses        Course[] @relation(name: "registration")
  createdCourses Course[] @relation(name: "authorship")
}

model Course {
  id              Int    @id @default(autoincrement())
  name            String
  description     String
  author          User   @relation(fields: [authorId], references: [id], name: "authorship")
  authorId        Int // relation scalar field  (used in the `@relation` attribute above)
  registeredUsers User[] @relation(name: "registration")
}
